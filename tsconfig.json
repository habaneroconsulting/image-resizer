{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "typeRoots": ["node_modules/@types", "src/types", "src/Theme/Theme.d.ts", "src/node-env.d.ts"],
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/__mocks__",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/~~**/*",
    "**/**~~/*"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
